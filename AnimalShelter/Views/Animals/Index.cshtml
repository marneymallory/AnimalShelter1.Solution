@{
  Layout = "_Layout";
}
@using AnimalShelter.Models;
@model List<AnimalShelter.Models.Animal>;

<h1>All Animals</h1>

@if (@Model.Count == 0)
{
  <h3>We let all of the animals loose into the neighborhood, so we are all out.</h3>
}

<ul>
  @foreach (Animal animal in Model)
  {
    <li>@Html.ActionLink($"{animal.Name}", "Details", new {id = animal.AnimalId})</li>
  }
</ul>

<p>@Html.ActionLink("Add a New Animal","Create")</p>